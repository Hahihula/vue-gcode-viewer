{
  "name": "vue-gcode-viewer",
  "version": "0.1.0",
  "description": "Interactive 3D G-Code viewer and editor for Vue 3 with real-time visualization",
  "type": "module",
  "main": "./dist/vue-gcode-viewer.umd.cjs",
  "module": "./dist/vue-gcode-viewer.js",
  "exports": {
    ".": {
      "import": "./dist/vue-gcode-viewer.js",
      "require": "./dist/vue-gcode-viewer.umd.cjs"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --mode lib",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "three": "^0.160.0",
    "three-stdlib": "^2.29.0",
    "codemirror": "^6.0.1",
    "@codemirror/state": "^6.4.0",
